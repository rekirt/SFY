<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="dialog_waiting" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 标题1样式 -->
    <style name="left_title_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="setting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_48</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/space_20</item>
    </style>
    <style name="setting_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/space_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/second_title_size</item>
    </style>
    <style name="setting_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/space_15</item>
    </style>
    <style name="setting_left_image_style">
        <item name="android:layout_width">@dimen/space_30</item>
        <item name="android:layout_height">@dimen/space_30</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--<style name="setting_right_text_style">-->
        <!--<item name="android:layout_width">@dimen/space_30</item>-->
        <!--<item name="android:layout_height">@dimen/space_30</item>-->
        <!--<item name="android:layout_alignParentRight">true</item>-->
    <!--</style>-->
</resources>
