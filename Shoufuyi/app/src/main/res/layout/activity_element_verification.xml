<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_id"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入身份证号码"
            android:background="@null"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_name"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="户名"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_card_number"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_card_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="卡号"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_card_camera"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_phone_number"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="手机号码"
            android:background="@null"
            android:layout_weight="1"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <com.csii.powerenter.PEEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="请输入交易密码"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/verif"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:hint="验证码"/>
        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/btn_green_selector"
            android:text="获取验证码"
            android:layout_marginRight="@dimen/space_30"
            android:enabled="false"
            android:clickable="false"
            android:textColor="#ffffff" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/space_15"
        android:text="验  证"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_selector"
        android:textSize="@dimen/title_size"
        >
    </Button>
