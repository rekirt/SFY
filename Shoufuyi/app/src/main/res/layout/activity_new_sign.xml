<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_id"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入身份证号码"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_id_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-20dp"
            android:src="@drawable/ic_camera"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_name"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="户名"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_card_number"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_card_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="卡号"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_card_camera"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_height"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_sign_phone_number"
            android:padding="@dimen/space_10"
            />
        <EditText
            android:id="@+id/edt_new_sign_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="手机号码"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-20dp"
            android:src="@drawable/ic_camera"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_18"
        >
        <CheckBox
            android:id="@+id/cb_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
        <TextView
            android:id="@+id/tv_agree"
            android:text="是否自动续签"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            />
    </LinearLayout>

    <!--同意注册-->
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/space_15"
        android:text="确认"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_selector"
        android:textSize="@dimen/title_size"
        >
    </Button>
</LinearLayout>