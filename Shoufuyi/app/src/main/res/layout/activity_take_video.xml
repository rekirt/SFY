            <!--android:onClick="onClick"-->
            <!--app:scalableType="fitCenter"-->
            <!--android:background="@color/black"/>-->
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            />
