            <!--android:layout_height="match_parent"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/video_play"-->
            <!--/>-->
        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/video_bg"
            android:background="@color/common_bg"
            />
    </FrameLayout>

    <Button
        android:id="@+id/btn_upload"
        android:layout_below="@+id/fl_video"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/space_25"
        android:text="上传"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_selector"
        android:textSize="@dimen/title_size"
        />
    <Button
        android:id="@+id/btn_again"
        android:layout_below="@+id/btn_upload"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height"
        android:text="重拍"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center"
        android:textColor="@color/white"
